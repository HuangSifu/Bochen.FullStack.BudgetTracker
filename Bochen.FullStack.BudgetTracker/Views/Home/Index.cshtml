@model IEnumerable<ApplicationCore.Models.Response.UserResponseModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="container-fluid bg-light">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th scope="col">UserId</th>
                    <th scope="col">Email</th>
                    <th scope="col">Fullname</th>
                    <th scope="col">JoinedOn</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td scope="col">@user.Id</td>
                        <td scope="col">@user.Email</td>
                        <td scope="col"><a class="text-dark" asp-controller="Users" asp-action="Details" asp-route-id="@user.Id">
                            @user.Fullname
                            </a>
                        </td>
                        <td scope="col">@user.JoinedOn</td>
                        <td>
                            <a asp-controller="Users" asp-action="Update" type="button" class="btn btn-info">Update</a>
                            <a asp-controller="Users" asp-action="Delete" type="button" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    </div>
</div>
